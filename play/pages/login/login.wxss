.container {
  margin: 30rpx;
}
.user-pic {
  width: 100rpx;
  height: 100rpx;
}
.login-title {
  margin: 30rpx 0 50rpx 0;
}
.user-input {
  border-bottom: 1rpx solid #E1E1E2;
  margin: 0 0 20rpx 0;
  font-size: 30rpx;
}
.login-input-container {
  position: relative;
}
.login-input-container .user-clear {
  position: absolute;
  padding: 10rpx;
  display: block;
  z-index: 99;
  right: 30rpx;
  top: -10rpx;
}
.login-input-container .pass-clear {
  position: absolute;
  display: block;
  padding: 10rpx;
  z-index: 99;
  right: 30rpx;
  top: -10rpx;
}
.login {
  width: 30%;
  margin: 50rpx auto 0 auto;
  padding: 10rpx 0;
  text-align: center;
  background: #38CEFE;
  color: white;
  border-radius: 15rpx
}
.wx-login {
  background: #F1F1F2;
  margin: 400rpx auto 0 auto;
}
button::after {
  border: none;
}
.wx-logo {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  display: block;
}
.wx-title {
  width: 100%;
  display: block;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  line-height: 50rpx;
}